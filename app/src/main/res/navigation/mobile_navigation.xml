<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.proyectoandroid.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.example.proyectoandroid.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />

    <fragment
        android:id="@+id/nav_seguidos"
        android:name="com.example.proyectoandroid.ui.seguidos.SeguidosFragment"
        android:label="@string/following"
        tools:layout="@layout/fragment_seguidos"/>
    <activity
        android:id="@+id/nav_login"
        android:name="com.example.proyectoandroid.LoginActivity"
        android:label="@string/iniciar_sesion"
        tools:layout="@layout/fragment_seguidos"/>
    <activity
        android:id="@+id/videoSearchActivity"
        android:name="com.example.proyectoandroid.ui.youtube.VideoSearchActivity"
        android:label="activity_video_search"
        tools:layout="@layout/activity_video_search" />
    <activity
        android:id="@+id/listaActivity"
        android:name="com.example.proyectoandroid.ui.youtube.ListaActivity"
        android:label="activity_lista"
        tools:layout="@layout/activity_lista" />
    <activity
        android:id="@+id/watchLaterActivity"
        android:name="com.example.proyectoandroid.ui.watchlater.WatchLaterActivity"
        android:label="activity_watch_later"
        tools:layout="@layout/activity_watch_later" />
    <activity
        android:id="@+id/searchUsersActivity"
        android:name="com.example.proyectoandroid.ui.search_users.SearchUsersActivity"
        android:label="activity_search_users"
        tools:layout="@layout/activity_search_users" />

</navigation>